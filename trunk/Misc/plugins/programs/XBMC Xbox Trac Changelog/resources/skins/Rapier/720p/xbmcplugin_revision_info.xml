<window>
    <defaultcontrol>50</defaultcontrol>
	
	<coordinates>
		<system>1</system>
		<posx>340</posx>
		<posy>150</posy>
	</coordinates>
	
	<controls>
		<!-- ** Background image ** -->
		<control type="image">
			<description>Background Image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>600</width>
			<height>330</height>
			<texture border="50">dialog-background.png</texture>
		</control>
		
		<!-- ** Title ** -->
		<control type="label" id="10">
			<description>Title</description>
			<posx>40</posx>
			<posy>55</posy>
			<width>520</width>
			<align>left</align>
			<font>ListFont</font>
            <textcolor>FFFFFFFF</textcolor>
		</control>
		
		<!-- ** Date / time ** -->
		<control type="label" id="20">
			<description>Date + Time</description>
			<posx>40</posx>
			<posy>80</posy>
			<width>400</width>
			<align>left</align>
			<font>ListFont</font>
            <textcolor>0xBBFFFFFF</textcolor>
		</control>

		<!-- ** Developer ** -->
		<control type="label" id="30">
			<description>Developer</description>
			<posx>560</posx>
			<posy>80</posy>
			<width>200</width>
			<align>right</align>
			<font>ListFont</font>
            <textcolor>FFe2ff43</textcolor>
		</control>
		
		<!-- ** Separator line ** -->
		<control type="image">
			<posx>0</posx>
			<posy>113</posy>
			<width>600</width>
			<height>2</height>
			<texture>separator2.png</texture>
		</control>		
		
		<!-- ** Description ** -->
		<control type="textbox" id="40">
			<description>Description</description>
			<posx>40</posx>
			<posy>120</posy>
			<width>520</width>
			<height>120</height>
			<pagecontrol>45</pagecontrol>
			<font>ListFont</font>
			<textcolor>0xBBFFFFFF</textcolor>
			<autoscroll delay="2000" time="2000" repeat="5000">True</autoscroll>			
		</control>

		<!-- ** Spin control for Description -->
  		<control type="spincontrol" id="45">
			<posx>510</posx>
			<posy>245</posy>
			<subtype>page</subtype>
			<font>DefaultFont</font>
       		<textcolor>ffffffff</textcolor>
			<onup>50</onup>
			<ondown>50</ondown>
			<onleft>50</onleft>
			<onright>50</onright>
			<showonepage>false</showonepage>
			<textureup>arrow-scroll-up-nofocus2.png</textureup>
			<texturedown flipy="true">arrow-scroll-up-nofocus2.png</texturedown>
			<textureupfocus>arrow-scroll-up-focus2.png</textureupfocus>
			<texturedownfocus flipy="true">arrow-scroll-up-focus2.png</texturedownfocus>
		</control>

		<!-- ** OK button ** -->
		<control type="button" id="50">
			<description>OK button</description>
			<posx>210</posx>
			<posy>277</posy>
			<include>DialogMenuBarBtn</include>
			<onup>45</onup>
			<onleft>45</onleft>
			<onright>45</onright>
			<ondown>45</ondown>
		</control>		
	</controls>
</window>