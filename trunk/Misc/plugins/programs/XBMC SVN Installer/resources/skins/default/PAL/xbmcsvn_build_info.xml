<window>
    <defaultcontrol>30050</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>140</posx>
		<posy>50</posy>
	</coordinates>
	<controls>
		<!-- ** Background image ** -->
		<control type="image">
			<description>Background Image</description>
			<posx>-49</posx>
			<posy>13</posy>
			<width>540</width>
			<height>515</height>
			<texture>dialog-panel.png</texture>
		</control>
		
		<!-- ** Name ** -->
		<control type="label" id="30010">
			<posx>-25</posx>
			<posy>30</posy>
			<width>350</width>
			<align>left</align>
			<font>special13</font>
            <textcolor>FFFFFFFF</textcolor>
		</control>
		
		<!-- ** Date ** -->
		<control type="label" id="30020">
			<posx>480</posx>
			<posy>30</posy>
			<width>300</width>
			<align>right</align>
			<font>special13</font>
            <textcolor>FFFFFFFF</textcolor>
		</control>
		
		<!-- ** Separator line ** -->
		<control type="image">
			<posx>-35</posx>
			<posy>55</posy>
			<width>520</width>
			<height>10</height>
			<texture>separator.png</texture>
		</control>
		
		<!-- ** Description ** -->
		<control type="textbox" id="30030">
			<description></description>
			<posx>-25</posx>
			<posy>70</posy>
			<width>500</width>
			<height>350</height>
			<font>font12</font>
			<textcolor>FFFFFFFF</textcolor>
			<pagecontrol>30035</pagecontrol>
			<autoscroll delay="2000" time="2000" repeat="7000">!Control.HasFocus(30035)</autoscroll>
		</control>
		
		<!-- ** Scrollbar control for Description -->
		<control type="button">
			<posx>465</posx>
			<posy>70</posy>
			<include>scrollbar_width</include>
			<height>20</height>
			<onclick>PageUp(30030)</onclick>
			<texturefocus border="4">scrollbar_arrow_up_focus.png</texturefocus>
			<texturenofocus border="4">scrollbar_arrow_up.png</texturenofocus>
			<showonepage>false</showonepage>
			<visible>Control.IsVisible(30030)</visible>
		</control>
		<control type="scrollbar" id="30035">
			<posx>465</posx>
			<posy>90</posy>
			<include>scrollbar_width</include>
			<height>310</height>
			<texturesliderbackground border="4">scrollbar_background.png</texturesliderbackground>
			<texturesliderbar border="4">scrollbar_bar.png</texturesliderbar>
			<texturesliderbarfocus border="4">scrollbar_bar_focus.png</texturesliderbarfocus>
			<textureslidernib>-</textureslidernib>
			<textureslidernibfocus>-</textureslidernibfocus>
			<onleft>30040</onleft>
			<onright>30040</onright>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
			<visible>Control.IsVisible(30030)</visible>
		</control>
		<control type="button">
			<posx>465</posx>
			<posy>400</posy>
			<include>scrollbar_width</include>
			<height>20</height>
			<onclick>PageDown(30030)</onclick>
			<texturefocus border="4">scrollbar_arrow_down_focus.png</texturefocus>
			<texturenofocus border="4">scrollbar_arrow_down.png</texturenofocus>
			<showonepage>false</showonepage>
			<visible>Control.IsVisible(30030)</visible>
		</control>	
				
		<!-- ** Separator line ** -->
		<control type="image">
			<posx>-35</posx>
			<posy>430</posy>
			<width>520</width>
			<height>10</height>
			<texture>separator.png</texture>
		</control>
		
		<!-- ** Download button ** -->
		<control type="button" id="30040">
			<description>Download</description>
			<posx>110</posx>
			<posy>450</posy>
			<width>100</width>
			<height>30</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>font13</font>
			<textcolor>ffffffff</textcolor>
			<texturefocus>keyboard-btn-space-focus.png</texturefocus>
			<texturenofocus>keyboard-btn-space.png</texturenofocus>
			<disabledcolor>60d0d0d0</disabledcolor>
			<shadowcolor>ff000000</shadowcolor>
			<onup>30035</onup>
			<onleft>30050</onleft>
			<onright>30050</onright>
			<ondown>30035</ondown>
		</control>		

		<!-- ** Install button ** -->
		<control type="button" id="30050">
			<description>Install</description>
			<posx>220</posx>
			<posy>450</posy>
			<width>100</width>
			<height>30</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>font13</font>
			<textcolor>ffffffff</textcolor>
			<texturefocus>keyboard-btn-space-focus.png</texturefocus>
			<texturenofocus>keyboard-btn-space.png</texturenofocus>
			<disabledcolor>60d0d0d0</disabledcolor>
			<shadowcolor>ff000000</shadowcolor>
			<onup>30035</onup>
			<onleft>30040</onleft>
			<onright>30040</onright>
			<ondown>30035</ondown>
		</control>		
	</controls>
</window>