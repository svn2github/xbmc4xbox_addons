<window>
    <defaultcontrol>30050</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>260</posx>
		<posy>50</posy>
	</coordinates>
	<controls>
		<!-- ** Background image ** -->
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>760</width>
			<height>620</height>
			<texture border="20">OverlayDialogBackground.png</texture>
		</control>
		
		<!-- ** Name ** -->
		<control type="label" id="30010">
			<posx>20</posx>
			<posy>20</posy>
			<width>500</width>
			<align>left</align>
			<font>font13caps_title</font>
            <textcolor>FFFFFFFF</textcolor>
		</control>
		
		<!-- ** Date ** -->
		<control type="label" id="30020">
			<posx>735</posx>
			<posy>20</posy>
			<width>300</width>
			<align>right</align>
			<font>font13caps_title</font>
            <textcolor>FFFFFFFF</textcolor>
		</control>
		
		<!-- ** Separator line ** -->
		<control type="image">
			<posx>0</posx>
			<posy>45</posy>
			<width>760</width>
			<height>10</height>
			<aspectratio>stretch</aspectratio>
			<texture>separator.png</texture>
		</control>
		
		<!-- ** Description ** -->
		<control type="textbox" id="30030">
			<description></description>
			<posx>20</posx>
			<posy>65</posy>
			<width>700</width>
			<height>475</height>
			<font>font12</font>
			<textcolor>FFFFFFFF</textcolor>
			<pagecontrol>30035</pagecontrol>
			<autoscroll delay="2000" time="2000" repeat="7000">!Control.HasFocus(30035)</autoscroll>
		</control>
		
		<!-- ** Scrollbar control for Description -->
  		<control type="scrollbar" id="30035">
			<posx>720</posx>
			<posy>65</posy>
			<width>25</width>
			<height>475</height>
			<texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
			<texturesliderbar border="0,14,0,14">ScrollBarV_bar.png</texturesliderbar>
			<texturesliderbarfocus border="0,14,0,14">ScrollBarV_bar_focus.png</texturesliderbarfocus>
			<textureslidernib>ScrollBarNib.png</textureslidernib>
			<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
			<onleft>30040</onleft>
			<onright>30050</onright>
		</control>		
		
		<!-- ** Separator line ** -->
		<control type="image">
			<posx>0</posx>
			<posy>540</posy>
			<width>760</width>
			<height>10</height>
			<aspectratio>stretch</aspectratio>
			<texture>separator.png</texture>
		</control>
		
		<!-- ** Download button ** -->
		<control type="button" id="30040">
			<description>Download</description>
			<posx>170</posx>
			<posy>560</posy>
			<width>200</width>
			<height>40</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>font13</font>
			<textcolor>ffffffff</textcolor>
			<texturenofocus border="5">MenuItemNF.png</texturenofocus>
			<texturefocus border="5">button-focus.png</texturefocus>
			<disabledcolor>60d0d0d0</disabledcolor>
			<shadowcolor>ff000000</shadowcolor>
			<onup>30035</onup>
			<onleft>30050</onleft>
			<onright>30050</onright>
			<ondown>30035</ondown>
		</control>		

		<!-- ** Install button ** -->
		<control type="button" id="30050">
			<description>Install</description>
			<posx>390</posx>
			<posy>560</posy>
			<width>200</width>
			<height>40</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>font13</font>
			<textcolor>ffffffff</textcolor>
			<texturenofocus border="5">MenuItemNF.png</texturenofocus>
			<texturefocus border="5">button-focus.png</texturefocus>
			<disabledcolor>60d0d0d0</disabledcolor>
			<shadowcolor>ff000000</shadowcolor>
			<onup>30035</onup>
			<onleft>30040</onleft>
			<onright>30040</onright>
			<ondown>30035</ondown>
		</control>		
	</controls>
</window>