<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="script.common.plugin.cache" name="Common plugin cache" provider-name="TheCollective" version="1.5.2">
  <requires>
    <import addon="xbmc.python" version="2.0" />
  </requires>
  <extension library="default.py" point="xbmc.service" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Common caching api for xbmc plugins.</summary>
  </extension>
  <extension library="lib" point="xbmc.python.module" />
</addon>

<addon
    id="plugin.video.iplayer"
    name="iPlayer"
    version="2.5.7"
    provider-name="Alastair, BuZz, Dink">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.elementtree" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en">Watch TV and listen to radio from the BBC's iPlayer website</summary>
        <description lang="en">
            This XBMC plugin enables (UK only) the playing of TV and Radio catchup content from the BBC IPlayer website. Live radio and TV feeds are also supported.
        </description>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
        <email>buzz at exotica org uk</email>
        <website>http://code.google.com/p/xbmc-iplayerv2/</website>
        <source>http://code.google.com/p/xbmc-iplayerv2/source/checkout</source>
    </extension>
    <statfeed>
        <working>yes</working>
        <notes></notes>
        <maintainer>BuZz</maintainer>
    </statfeed>
</addon>
</addons>
