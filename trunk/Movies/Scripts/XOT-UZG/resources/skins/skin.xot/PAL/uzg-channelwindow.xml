					<height>380</height>
					<visible>true</visible>
					<viewtype label="list">list</viewtype>
					<orientation>vertical</orientation>
					<scrolltime>200</scrolltime>
					<itemlayout width="40" height="40">
						<control type="image">
	                        <posx>0</posx>
	                        <posy>0</posy>
	                        <width>30</width>
	                        <height>40</height>
	                        <visible>true</visible>
	                        <texture>xot_page-bg.png</texture>
	                    </control> 
	                    <control type="label">
						    <posx>15</posx>
						    <posy>0</posy>
						    <width>30</width>
						    <height>39</height>
						    <font>font13</font>
						    <aligny>center</aligny>
						    <align>center</align>
	                        <selectedcolor>green</selectedcolor>
	                        <info>ListItem.Label</info>			            
						</control>                   
					</itemlayout>
					<focusedlayout height="40" width="40">
						<control type="image">
						    <posx>0</posx>
						    <posy>0</posy>
						    <width>30</width>
						    <height>40</height>
						    <visible>Control.HasFocus(71)</visible>
						    <texture>xot_page-bg-focus.png</texture>
						</control>
						<control type="image">
	                        <posx>0</posx>
	                        <posy>0</posy>
	                        <width>30</width>
	                        <height>40</height>
	                        <visible>!Control.HasFocus(71)</visible>
