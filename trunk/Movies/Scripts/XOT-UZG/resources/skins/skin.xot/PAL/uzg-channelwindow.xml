<window>
	<!-- 720x576 -->
    <defaultcontrol>50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>        
        <!-- XOT Title and background -->
		<control type="image" id="199">
            <description>background image</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>720</width>
            <height>576</height>
            <colorkey>0</colorkey>
            <textcolor>ffffffff</textcolor>
            <colordiffuse>ffffffff</colordiffuse>
        	<texture fallback="xot_globe_low.jpg">$INFO[Container(50).Property(XOT_ChannelBackground)]</texture>
		</control>
		<control type="label">
            <description>xbox media center label</description>
            <posx>130</posx>
            <posy>32</posy>
            <align>left</align>
            <label>XBMC Media Center</label>
            <font>font13caps_title</font>
            <textcolor>ffffffff</textcolor>
        </control>
        <control type="label">
            <description>description label</description>
            <posx>260</posx>
            <posy>32</posy>
            <align>left</align>
            <label>XOT-Uzg - PAL</label>
            <font>font13_title</font>
        </control>
		
		<control type="group" id="1000">
            <!-- Do NOT remove. This control is needed by the script -->
            <posx>0</posx>
            <posy>465</posy>
			
			<animation effect="slide" start="720" time="150">WindowOpen</animation>
            <animation effect="slide" end="720" time="150">WindowClose</animation>
                    
			<control type="image">
				<description>ChannelInfo</description>
                <visible>true</visible>
                <posx>0</posx>
                <posy>0</posy>
                <width>720</width>
                <height>3</height>
                <aligny>center</aligny>
                <texture>separator2.png</texture>
			</control>
            <control type="image" id="1001">
                <!-- Do NOT remove. This control is needed by the script -->
                <description>ChannelIcon</description>
                <visible>true</visible>
                <posx>605</posx>
                <posy>15</posy>
                <width>80</width>
                <height>80</height>
                <aligny>center</aligny>
                <texturefocus/>
                <texturenofocus/>
				<texture>$INFO[Container(50).Property(XOT_ChannelIcon)]</texture>
            </control>
            <control type="label" id="1002">
                <description>ChannelName label</description>
                <posx>585</posx>
                <posy>10</posy>
                <width>550</width>
                <align>right</align>
				<label fallback="Unknown">$INFO[Container(50).Property(XOT_ChannelName)]</label>
                <font>special15</font>
            </control>
            <control type="label" id="1003">
                <description>ChannelDescription</description>
                <posx>585</posx>
                <posy>35</posy>
                <width>550</width>
                <height>50</height>
                <visible>true</visible>
                <colordiffuse>FFFFFFFF</colordiffuse>
                <font>font12</font>
                <align>right</align>
                <textcolor>FFFFFFFF</textcolor>
                <wrapmultiline>true</wrapmultiline>
				<label fallback="Unknown">$INFO[Container(50).Property(XOT_ChannelDescription)]</label>
            </control>
        </control>
		
		<!-- Episode List -->
        <control type="group">
			<posx>30</posx>
            <posy>75</posy>
            
            <animation effect="slide" start="720" time="150">WindowOpen</animation>
            <animation effect="slide" end="720" time="150">WindowClose</animation>
    
			<!--control type="image">
				<description>background image</description>
	            <posx>-10</posx>
	            <posy>-10</posy>
	            <width>675</width>
	            <height>400</height>
	            <colorkey>0</colorkey>
	            <textcolor>ffffffff</textcolor>
	            <colordiffuse>$INFO[Container(50).Property(XOT_DimBackground)]</colordiffuse>
	            <visible>True</visible>
	            <texture>xot_ContentPanel.png</texture>					
			</control-->

            <control type="list" id="50">
				<!-- Do NOT remove. This control is needed by the script -->
				<width>600</width>
				<height>380</height>
				<posy>5</posy>
				
				<onleft>211</onleft>
				<onright>60</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				
				<orientation>vertical</orientation>
         		<focusposition>4</focusposition>
                <scrolltime>200</scrolltime>
         
                <pagecontrol>60</pagecontrol>
    
	            <!--spinposx>220</spinposx>
	            <spinposy>400</spinposy>
				<spinwidth>22</spinwidth>
	            <spinheight>24</spinheight>
	            <textureup>scroll-up.png</textureup>
	            <textureupfocus>scroll-up-focus.png</textureupfocus>
	            <texturedown>scroll-down.png</texturedown>
	            <texturedownfocus>scroll-down-focus.png</texturedownfocus-->
		            
				<viewtype label="Episodes">Episodelist</viewtype>
				<!--selectedcolor>FFe2ff43</selectedcolor-->                        
				
				<itemlayout height="37">
                    <control type="image">
                        <width>525</width>
                        <height>37</height>
                        <posx>75</posx>
                        <posy>0</posy>
                        <texture>xot_list-nofocus.png</texture>
                    </control>
                    <control type="image">
                        <posx>80</posx>
                        <posy>2</posy>
                        <width>32</width>
                        <height>32</height>
                        <info>ListItem.ActualIcon</info>
                    </control>
					<control type="label">
                        <posx>120</posx>
                        <posy>2</posy>
                        <width>480</width>
                        <height>32</height>
                        <font>font13</font>
                        <selectedcolor>FFe2ff43</selectedcolor>
                        <align>left</align>
                        <info>ListItem.Label</info>
                    </control>
                    <control type="label">
                        <posx>600</posx>
                        <width>480</width>
                        <posy>2</posy>
                        <height>32</height>
                        <font>font13</font>
                        <selectedcolor>FFe2ff43</selectedcolor>
                        <textcolor>60ffffff</textcolor>
                        <align>right</align>
                        <info>ListItem.Label2</info>
                    </control>
                </itemlayout>
				<focusedlayout height="133">
                    <control type="image">
                        <width>600</width>
                        <height>133</height>
                        <posx>0</posx>
                        <posy>0</posy>
                        <visible>!Control.HasFocus(50)</visible>
                        <texture>xot_MenuItemFO.png</texture>
						<aspectratio>scale</aspectratio>
                    </control>
                    <control type="image">
                        <width>600</width>
                        <height>133</height>
                        <posx>0</posx>
                        <posy>0</posy>
                        <visible>Control.HasFocus(50)</visible>
                        <texture>xot_MenuItemFO.png</texture>
						<aspectratio>scale</aspectratio>
                    </control>
					<control type="image">
                        <posx>5</posx>
                        <posy>10</posy>
                        <width>152</width>
                        <height>114</height>
                        <texture>xot_border.png</texture>
                    </control>
					<control type="image">
                        <posx>6</posx>
                        <posy>11</posy>
                        <width>150</width>
                        <height>112</height>
                        <info>ListItem.Icon</info>
						<aspectratio>scale</aspectratio>
                    </control>
                    <control type="image">
                        <posx>162</posx>
                        <posy>10</posy>
                        <width>32</width>
                        <height>32</height>
                        <info>ListItem.ActualIcon</info>
                    </control>
                    
                    <control type="image">
						<posx>115</posx>
                        <posy>10</posy>
                        <width>41</width>
		                <height>41</height>
		                <colorkey>0</colorkey>
		                <textcolor>ffffffff</textcolor>
		                <visible>Substring(ListItem.property(XOT_Error),True) + !Substring(ListItem.property(XOT_Type),folder) + !Substring(ListItem.property(XOT_Complete),True)</visible>
						<texture>xot_error.png</texture>
					</control>   
					
                    <control type="image">
						<posx>115</posx>
                        <posy>10</posy>
                        <width>41</width>
		                <height>41</height>
		                <colorkey>0</colorkey>
		                <textcolor>ffffffff</textcolor>
		                <!--visible>ListItem.property(XOT_Complete) + ListItem.property(XOT_Type) == 'folder'</visible-->
						<visible>Substring(ListItem.property(XOT_Complete),True) + !Substring(ListItem.property(XOT_Type),folder)</visible>
						<texture>xot_complete.png</texture>
					</control>   
					  
					<control type="image">
						<posx>119</posx>
                        <posy>13</posy>
                        <width>36</width>
		                <height>36</height>
		                <colorkey>0</colorkey>
		                <textcolor>ffffffff</textcolor>
		                <visible>!Substring(ListItem.property(XOT_Complete),True) + !Substring(ListItem.property(XOT_Error),True)</visible>
						<texture>xot_busy.png</texture>
						<animation effect="rotate" start="0" end="360" center="137,31" loop="true" time="1000" condition="true">Conditional</animation>
						<colordiffuse>FFFFFFFF</colordiffuse>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="image">
						<posx>12</posx>
                        <posy>95</posy>
                        <width>144</width>
		                <height>32</height>
		                <colorkey>0</colorkey>
		                <textcolor>ffffffff</textcolor>
		                <texture fallback="-">$INFO[ListItem.property(XOT_Rating)]</texture>
					</control>                
                    <control type="label">
                        <posx>200</posx>
                        <posy>10</posy>
                        <width>400</width>
                        <height>32</height>
                        <font>font13</font>
                        <align>left</align>
						<textcolor>ffffffff</textcolor>                        
                        <info>ListItem.Label</info>
                    </control>
                    <control type="label">
                        <posx>600</posx>
                        <posy>10</posy>
                        <width>400</width>
                        <height>32</height>
                        <font>font13</font>
                        <textcolor>ddffffff</textcolor>
                        <align>right</align>
                        <info>ListItem.Label2</info>
                    </control>
					<control type="textbox">
                        <posx>162</posx>
                        <posy>42</posy>
                        <width>438</width>
                        <height>80</height>
                        <font>font13</font>
                        <textcolor>ddffffff</textcolor>
                        <align>left</align>
						<autoscroll delay="3000" time="2000" repeat="10000">true</autoscroll>			
                        <info>ListItem.property(XOT_Description)</info>
                    </control>					
                </focusedlayout>
            </control>

            <control type="scrollbar" id="60">
                <visible>true</visible>
                <posx>605</posx>
                <posy>0</posy>
                <width>15</width>
                <height>380</height>
                <onleft>50</onleft>
                <onright>71</onright>
                <description>Scroll Bar</description>
                <texturesliderbackground>xot_scrollbar_background.png</texturesliderbackground>
                <texturesliderbar>xot_scrollbar_bar.png</texturesliderbar>
                <texturesliderbarfocus>xot_scrollbar_bar_focus.png</texturesliderbarfocus>
                <textureslidernib>-</textureslidernib>
                <textureslidernibfocus>-</textureslidernibfocus>
                <orientation>vertical</orientation>
            </control>
           
	        <!-- Page List -->
	        <control type="group" id ="70">
	            <posx>625</posx>
	            <posy>0</posy>
	            
	            <control type="list" id="71">
					<onleft>60</onleft>
					<onright>50</onright>
					<onup>71</onup>
					<ondown>71</ondown>
					<description>PageItems</description>
