<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<addon id="plugin.video.icefilms" name="Icefilms" version="1.1.26"
provider-name="Eldorado (originator: anarchintosh)">
  <requires>
    <import addon="xbmc.python" version="2.0" />
    <import addon="script.module.simplejson" />
    <import addon="script.module.elementtree" />
    <import addon="script.module.beautifulsoup" />
    <import addon="script.module.metahandler" version="1.0.0" />
    <import addon="script.module.t0mm0.common" version="1.1.0" />
    <import addon="script.common.plugin.cache" version="0.9.0" />
    <import addon="script.module.pysqlite2" version="1.0.0" />
    <import addon="script.module.xbmcvfs" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Stream and download scene releases from the links
    listed on Icefilms.info</summary>
    <description>Visit www.xbmchub.com for support. Turns your XBMC
    into an instant free on-demand media-center. Stream and
    download to your library pure AVI scene releases, in DVD and
    HD720p quality. Browse and search the library of over 77,000
    videos with metadata and posters. Never experience the
    frustration of dead video links!</description>
  </extension>
  <statfeed>
    <working>yes</working>
    <notes>none</notes>
    <maintainer>Kozz</maintainer>
    <thumbnailurl>
    http://addons4xbox.googlecode.com/svn/branches/addons/plugin.video.icefilms/icon.png</thumbnailurl>
  </statfeed>
</addon>
