<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.shoutcastradio"
       name="SHOUTcast Radio Directory"
       version="1.1.1"
       provider-name="iZE">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="Default.py">
        <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Listen to SHOUTcast Radio stations.</summary>
    <description lang="en">Browse through genres and subgenres and choose the radio station of your interest to listen to.</description>
  </extension>
</addon>
