<window>
    <defaultcontrol>50</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>200</posx>
		<posy>130</posy>
	</coordinates>
	<controls>
		<!-- ** Background image ** -->
		<control type="image">
			<description>Background Image</description>
			<posx>-49</posx>
			<posy>18</posy>
			<width>450</width>
			<height>300</height>
			<texture>dialog-panel.png</texture>
		</control>
		
		<!-- ** Title ** -->
		<control type="label" id="10">
			<description>Title</description>
			<posx>-25</posx>
			<posy>45</posy>
			<width>400</width>
			<align>left</align>
			<font>font12</font>
            <textcolor>FFFFFFFF</textcolor>
		</control>
		
		<!-- ** Date / time ** -->
		<control type="label" id="20">
			<description>Date + Time</description>
			<posx>-25</posx>
			<posy>70</posy>
			<width>400</width>
			<align>left</align>
			<font>font12</font>
            <textcolor>0xBBFFFFFF</textcolor>
		</control>

		<!-- ** Developer ** -->
		<control type="label" id="30">
			<description>Developer</description>
			<posx>380</posx>
			<posy>70</posy>
			<width>200</width>
			<align>right</align>
			<font>font12</font>
            <textcolor>FFe2ff43</textcolor>
		</control>
		
		<!-- ** Separator line ** -->
		<control type="image">
			<posx>-25</posx>
			<posy>100</posy>
			<width>410</width>
			<height>10</height>
			<texture>separator.png</texture>
		</control>		
		
		<!-- ** Description ** -->
		<control type="textbox" id="40">
			<description>Description</description>
			<posx>-25</posx>
			<posy>115</posy>
			<width>410</width>
			<height>110</height>
			<pagecontrol>45</pagecontrol>
			<font>font12</font>
			<textcolor>0xBBFFFFFF</textcolor>
			<autoscroll delay="2000" time="2000" repeat="5000">True</autoscroll>			
		</control>

		<!-- ** Spin control for Description -->
  		<control type="spincontrol" id="45">
			<posx>350</posx>
			<posy>230</posy>
			<subtype>page</subtype>
			<font>font10</font>
       		<textcolor>ffffffff</textcolor>
			<onup>50</onup>
			<ondown>50</ondown>
			<onleft>50</onleft>
			<onright>50</onright>
			<showonepage>false</showonepage>
            <textureup>scroll-up.png</textureup>
            <texturedown>scroll-down.png</texturedown>
            <textureupfocus>scroll-up-focus.png</textureupfocus>
            <texturedownfocus>scroll-down-focus.png</texturedownfocus>
		</control>

		<!-- ** OK button ** -->
		<control type="button" id="50">
			<description>OK button</description>
			<posx>140</posx>
			<posy>250</posy>
			<width>100</width>
			<height>30</height>
			<align>center</align>
			<aligny>center</aligny>
			<textcolor>ffffffff</textcolor>
			<texturefocus>keyboard-btn-space-focus.png</texturefocus>
			<texturenofocus>keyboard-btn-space.png</texturenofocus>
			<disabledcolor>60d0d0d0</disabledcolor>
			<shadowcolor>ff000000</shadowcolor>
			<onup>45</onup>
			<onleft>45</onleft>
			<onright>45</onright>
			<ondown>45</ondown>
		</control>		
	</controls>
</window>