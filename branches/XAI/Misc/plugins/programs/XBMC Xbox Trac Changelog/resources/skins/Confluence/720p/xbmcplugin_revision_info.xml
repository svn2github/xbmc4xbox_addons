<window>
    <defaultcontrol>50</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>330</posx>
		<posy>120</posy>
	</coordinates>
	<controls>
		<!-- ** Background image ** -->
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>620</width>
			<height>355</height>
			<texture border="20">DialogBack.png</texture>
		</control>
		
		<!-- ** Title ** -->
		<control type="label" id="10">
			<description>Title</description>
            <posx>20</posx>
			<posy>18</posy>
			<width>580</width>
			<height>30</height>
			<font>font13caps_title</font>
			<label>13406</label>
			<align>left</align>
			<aligny>center</aligny>
			<textcolor>white</textcolor>
			<shadowcolor>black</shadowcolor>
		</control>
		
		<!-- ** Date / time ** -->
		<control type="label" id="20">
			<description>Date + Time</description>
			<posx>20</posx>
			<posy>45</posy>
			<width>400</width>
			<align>left</align>
			<font>font13</font>
            <textcolor>0xBBFFFFFF</textcolor>
		</control>

		<!-- ** Developer ** -->
		<control type="label" id="30">
			<description>Developer</description>
			<posx>595</posx>
			<posy>45</posy>
			<width>150</width>
			<align>right</align>
			<font>font13</font>
            <textcolor>FFe2ff43</textcolor>
		</control>
		 
		<!-- ** Separator line ** -->
		<control type="image">
			<posx>10</posx>
			<posy>75</posy>
			<width>620</width>
			<height>10</height>
			<aspectratio>stretch</aspectratio>
			<texture>separator.png</texture>
		</control>		
		
		<!-- ** Description ** -->
		<control type="textbox" id="40">
			<description>Description</description>
            <posx>20</posx>
			<posy>90</posy>
			<width>560</width>
			<height>190</height>
			<aligny>top</aligny>
			<pagecontrol>45</pagecontrol>			
		</control>

		<!-- ** Scrollbar control for Description -->
  		<control type="scrollbar" id="45">
			<posx>580</posx>
			<posy>95</posy>
			<width>25</width>
			<height>190</height>
			<texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
			<texturesliderbar border="0,14,0,14">ScrollBarV_bar.png</texturesliderbar>
			<texturesliderbarfocus border="0,14,0,14">ScrollBarV_bar_focus.png</texturesliderbarfocus>
			<textureslidernib>ScrollBarNib.png</textureslidernib>
			<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
			<onleft>50</onleft>
			<onright>50</onright>
		</control>

		<!-- ** OK button ** -->
		<control type="button" id="50">
			<description>OK button</description>
            <posx>200</posx>
			<posy>290</posy>
			<width>200</width>
			<height>40</height>
			<label>186</label>
			<font>font12caps_title</font>
			<textcolor>white</textcolor>
			<focusedcolor>white</focusedcolor>
			<align>center</align>
			<texturenofocus border="5">MenuItemNF.png</texturenofocus>
			<texturefocus border="5">button-focus.png</texturefocus>
			<onup>45</onup>
			<onleft>45</onleft>
			<onright>45</onright>
			<ondown>45</ondown>
		</control>		
	</controls>
</window>