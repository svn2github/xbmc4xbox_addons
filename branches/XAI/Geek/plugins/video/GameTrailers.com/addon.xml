<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.gametrailers"
       name="GameTrailers.com"
       version="1.0.0"
       provider-name="iZE">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="Default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Displays videos from Gametrailers.com</summary>
    <description lang="en">Displays popular feeds from Gametrailers.com, you are also able to navigate by platform and type of video.</description>
  </extension>
</addon>
